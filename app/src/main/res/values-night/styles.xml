<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Common TextInput style for dark mode -->
    <style name="Widget.PowerGym.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/primary</item>
        <item name="android:textColorHint">@color/primary</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <!-- Style for EditText inside TextInputLayout -->
    <style name="Widget.PowerGym.TextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/input_text_color</item>
        <item name="android:backgroundTint">@color/input_background</item>
    </style>

    <!-- Style for password fields -->
    <style name="Widget.PowerGym.TextInputLayout.Password" parent="Widget.PowerGym.TextInputLayout">
        <item name="passwordToggleEnabled">true</item>
        <item name="passwordToggleTint">@color/primary</item>
    </style>

    <!-- Primary button style -->
    <style name="Widget.PowerGym.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:height">56dp</item>
    </style>

    <!-- Outlined button style -->
    <style name="Widget.PowerGym.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/primary</item>
        <item name="strokeColor">@color/primary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:height">56dp</item>
    </style>

    <!-- Chip style -->
    <style name="Widget.PowerGym.Chip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/primary</item>
        <item name="android:textColor">@color/black</item>
        <item name="chipStrokeColor">@color/primary_variant</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>
</resources>