<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Light mode uses #16353C for checked state and #EDF4F6 for unchecked -->
    <!-- Dark mode uses #16353C for checked state and white text color -->
    <item android:color="#16353C" android:state_checked="true" android:state_enabled="true"/>
    <item android:color="@color/surface_color" android:state_checked="false" android:state_enabled="true" />
    <item android:color="@color/disabled" android:state_enabled="false"/>
</selector>