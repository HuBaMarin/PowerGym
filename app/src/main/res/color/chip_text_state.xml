<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- White text for checked chips in both modes -->
    <item android:color="#FFFFFF" android:state_checked="true" android:state_enabled="true"/>
    <!-- Dark text for unchecked chips in light mode, light text for dark mode -->
    <item android:color="@color/on_surface" android:state_checked="false" android:state_enabled="true" />
    <item android:color="@color/text_secondary" android:state_enabled="false"/>
</selector>